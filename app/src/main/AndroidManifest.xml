<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ntl.optimus.optimusweather" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_weather"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="com.ntl.optimus.optimusweather.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ntl.optimus.optimusweather.SearchLocationActivity"
            android:icon="@drawable/ic_action_place" >
        </activity>
        <activity
            android:name="com.ntl.optimus.optimusweather.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>

</manifest>
