<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/light_green_500">

    <RelativeLayout
        android:id="@+id/layout_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/dayName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="Monday"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dayDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dayName"
            android:layout_centerHorizontal="true"
            android:paddingLeft="5dp"
            android:text="5/11"
            android:textSize="16sp" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/dayIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
         />


    <TextView
        android:id="@+id/dayTempMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="7dp"
        android:paddingRight="5dp"
        android:text="00"
        android:textSize="16sp"
        android:textColor="@color/red_500"/>

    <TextView
        android:id="@+id/tv_to2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/dayTempMax"
        android:layout_toLeftOf="@+id/dayTempMax"
        android:paddingRight="7dp"
        android:text="-"
        android:textSize="16sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/dayTempMin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/dayTempMax"
        android:layout_toLeftOf="@+id/tv_to2"
        android:paddingRight="7dp"
        android:text="00"
        android:textSize="16sp"
        android:textColor="@color/blue_500"/>


    <TextView
        android:id="@+id/dayCloud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="7dp"
        android:paddingRight="7dp"
        android:text="10%"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/humidityIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/dayCloud"
        android:layout_toLeftOf="@+id/dayCloud"
        android:layout_marginRight="2dp"
        android:src="@drawable/humidity"
        />

    <TextView
        android:id="@+id/dayDescr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dayIcon"
        android:layout_alignBaseline="@+id/dayCloud"
        android:layout_centerHorizontal="true"
        android:text="clouds"
        android:textSize="16sp"

        />

</RelativeLayout>
